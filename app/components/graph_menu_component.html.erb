<div class="relative h-8" data-controller="menu">
  <div class="flex items-center h-8 cursor-pointer mr-4" data-action="click->menu#toggle">
    <span class="mr-2">Graphs</span>
    <span class="icon"><%= svg(:expand) %></span>
  </div>

  <div class="absolute mt-[-1px] right-0 top-8 bg-tertiary border-border border z-10 px-4 py-2 hidden" data-menu-target="panel">
    <% Graph.all.each do |graph| %>
      <a href="<%= graph_path(graph) %>" class="hover:text-slate-400 block py-1 border-border border-b border-dashed"><%= graph.name %> (<%= graph.triples.size %>)</a>
    <% end %>

    <a href="<%= new_graph_path %>" class="mt-3 button w-52 text-center block">add graph</a>
  </div>
</div>